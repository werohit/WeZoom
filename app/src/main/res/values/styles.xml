<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoViMagnifierTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="LoViMagnifierTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="LoViMagnifierTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />
    <style name="MyAlertDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/alertdialog_background</item>
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
